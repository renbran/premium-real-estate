<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Webhook Log Tree View -->
    <record id="view_webhook_log_tree" model="ir.ui.view">
        <field name="name">webhook.log.tree</field>
        <field name="model">webhook.log</field>
        <field name="arch" type="xml">
            <tree string="Webhook Logs" decoration-success="status == 'success'" 
                  decoration-danger="status == 'failed'" decoration-info="status == 'processing'">
                <field name="create_date" string="Date/Time"/>
                <field name="status"/>
                <field name="vendor_name"/>
                <field name="bill_amount" sum="Total Amount"/>
                <field name="invoice_date"/>
                <field name="processing_time" widget="float_time" string="Duration"/>
                <field name="ip_address" optional="hide"/>
                <field name="error_message" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Webhook Log Form View -->
    <record id="view_webhook_log_form" model="ir.ui.view">
        <field name="name">webhook.log.form</field>
        <field name="model">webhook.log</field>
        <field name="arch" type="xml">
            <form string="Webhook Log">
                <header>
                    <button name="action_view_bill" string="View Bill" type="object"
                            class="btn-primary" attrs="{'invisible': [('bill_id', '=', False)]}"/>
                    <button name="action_retry_processing" string="Retry" type="object"
                            class="btn-secondary" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="processing,success,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="create_date" string="Request Time"/>
                            <field name="processing_time" widget="float_time"/>
                            <field name="bill_id"/>
                            <field name="is_recent" invisible="1"/>
                        </group>
                        <group name="extracted_data" string="Extracted Data">
                            <field name="vendor_name"/>
                            <field name="bill_amount"/>
                            <field name="invoice_date"/>
                        </group>
                    </group>

                    <group>
                        <group name="network_info" string="Network Information">
                            <field name="ip_address"/>
                            <field name="user_agent"/>
                        </group>
                        <group name="error_info" string="Error Information" 
                               attrs="{'invisible': [('status', '!=', 'failed')]}">
                            <field name="error_message" nolabel="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Request Data" name="request_data">
                            <field name="request_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Response Data" name="response_data" 
                              attrs="{'invisible': [('response_data', '=', False)]}">
                            <field name="response_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook Log Kanban View -->
    <record id="view_webhook_log_kanban" model="ir.ui.view">
        <field name="name">webhook.log.kanban</field>
        <field name="model">webhook.log</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="color"/>
                <field name="status"/>
                <field name="vendor_name"/>
                <field name="bill_amount"/>
                <field name="create_date"/>
                <field name="error_message"/>
                <field name="bill_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="vendor_name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        $<field name="bill_amount"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <i class="fa fa-clock-o"/> <field name="create_date" widget="relative"/>
                                </div>
                                <div t-if="record.error_message.raw_value" class="text-danger">
                                    <i class="fa fa-exclamation-triangle"/> Error occurred
                                </div>
                                <div t-if="record.bill_id.raw_value" class="text-success">
                                    <i class="fa fa-check"/> Bill created
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Webhook Log Search View -->
    <record id="view_webhook_log_search" model="ir.ui.view">
        <field name="name">webhook.log.search</field>
        <field name="model">webhook.log</field>
        <field name="arch" type="xml">
            <search string="Webhook Logs">
                <field name="vendor_name" string="Vendor"/>
                <field name="error_message" string="Error"/>
                <field name="ip_address" string="IP Address"/>
                
                <filter name="success" string="Successful" domain="[('status', '=', 'success')]"/>
                <filter name="failed" string="Failed" domain="[('status', '=', 'failed')]"/>
                <filter name="processing" string="Processing" domain="[('status', '=', 'processing')]"/>
                
                <separator/>
                <filter name="recent" string="Recent (24h)" domain="[('is_recent', '=', True)]"/>
                <filter name="has_bill" string="Bill Created" domain="[('bill_id', '!=', False)]"/>
                
                <separator/>
                <filter name="group_by_status" string="Status" context="{'group_by': 'status'}"/>
                <filter name="group_by_date" string="Date" context="{'group_by': 'create_date:day'}"/>
            </search>
        </field>
    </record>

    <!-- Webhook Log Action -->
    <record id="action_webhook_log" model="ir.actions.act_window">
        <field name="name">Webhook Logs</field>
        <field name="res_model">webhook.log</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_webhook_log_search"/>
        <field name="context">{'search_default_recent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No webhook requests found!
            </p>
            <p>
                Webhook logs will appear here when external systems send bill automation requests.
                Configure your Zapier automation to start processing bills automatically.
            </p>
        </field>
    </record>

    <!-- Bill Automation Configuration Views -->
    <record id="view_bill_automation_config_tree" model="ir.ui.view">
        <field name="name">bill.automation.config.tree</field>
        <field name="model">bill.automation.config</field>
        <field name="arch" type="xml">
            <tree string="Bill Automation Configurations">
                <field name="name"/>
                <field name="active"/>
                <field name="webhook_enabled"/>
                <field name="total_requests"/>
                <field name="success_rate" string="Success Rate (%)"/>
                <field name="last_request_date"/>
            </tree>
        </field>
    </record>

    <record id="view_bill_automation_config_form" model="ir.ui.view">
        <field name="name">bill.automation.config.form</field>
        <field name="model">bill.automation.config</field>
        <field name="arch" type="xml">
            <form string="Bill Automation Configuration">
                <header>
                    <button name="action_test_webhook" string="Test Configuration" type="object" class="btn-primary"/>
                    <button name="action_regenerate_api_key" string="Regenerate API Key" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('api_key_required', '=', False)]}"/>
                    <button name="action_view_webhook_logs" string="View Logs" type="object" class="btn-secondary"/>
                    <button name="action_view_statistics" string="Statistics" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_settings" string="Basic Settings">
                            <field name="active"/>
                            <field name="webhook_enabled"/>
                            <field name="webhook_url" widget="url" readonly="1"/>
                        </group>
                        <group name="statistics" string="Statistics">
                            <field name="total_requests"/>
                            <field name="successful_requests"/>
                            <field name="failed_requests"/>
                            <field name="success_rate" widget="percentage"/>
                            <field name="last_request_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Security" name="security">
                            <group>
                                <group name="api_security" string="API Security">
                                    <field name="api_key_required"/>
                                    <field name="api_key" password="True" 
                                           attrs="{'invisible': [('api_key_required', '=', False)]}"/>
                                    <field name="allowed_ips" 
                                           placeholder="192.168.1.100, 10.0.0.50 (leave empty to allow all)"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Processing" name="processing">
                            <group>
                                <group name="automation_settings" string="Automation Settings">
                                    <field name="auto_create_vendors"/>
                                    <field name="duplicate_detection"/>
                                    <field name="file_attachment_enabled"/>
                                </group>
                                <group name="limits" string="Limits &amp; Timeouts">
                                    <field name="max_file_size_mb"/>
                                    <field name="request_timeout"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Defaults" name="defaults">
                            <group>
                                <group name="default_accounts" string="Default Accounts">
                                    <field name="default_journal_id"/>
                                    <field name="default_expense_account_id"/>
                                    <field name="default_currency_id"/>
                                </group>
                                <group name="notifications" string="Notifications">
                                    <field name="error_notification_enabled"/>
                                    <field name="notification_email" 
                                           attrs="{'invisible': [('error_notification_enabled', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bill_automation_config" model="ir.actions.act_window">
        <field name="name">Bill Automation Configuration</field>
        <field name="res_model">bill.automation.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Bill Automation configuration!
            </p>
            <p>
                Configure how webhook requests should be processed, including security settings,
                default accounts, and automation options.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_bill_automation" name="Bill Automation" 
              parent="account.menu_finance" sequence="50"/>
    
    <menuitem id="menu_bill_automation_config" name="Configuration" 
              parent="menu_bill_automation" action="action_bill_automation_config" sequence="10"/>
    
    <menuitem id="menu_webhook_logs" name="Webhook Logs" 
              parent="menu_bill_automation" action="action_webhook_log" sequence="20"/>

</odoo>