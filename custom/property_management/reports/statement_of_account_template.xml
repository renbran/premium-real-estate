<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Statement of Account Template -->
    <template id="statement_of_account_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap');
                            
                            body {
                                font-family: 'Inter', Arial, sans-serif;
                                font-size: 11pt;
                                color: #1f2937;
                            }
                            
                            .statement-header {
                                background: linear-gradient(135deg, #059669 0%, #10b981 100%);
                                color: white;
                                padding: 30px;
                                border-radius: 10px;
                                margin-bottom: 30px;
                            }
                            
                            .statement-title {
                                font-size: 32px;
                                font-weight: 700;
                                text-transform: uppercase;
                                letter-spacing: 1px;
                                margin-bottom: 5px;
                            }
                            
                            .statement-subtitle {
                                font-size: 14px;
                                opacity: 0.9;
                            }
                            
                            .statement-ref {
                                background: white;
                                color: #059669;
                                padding: 6px 16px;
                                border-radius: 15px;
                                display: inline-block;
                                margin-top: 15px;
                                font-weight: 600;
                                font-size: 13px;
                            }
                            
                            .info-grid {
                                display: table;
                                width: 100%;
                                margin: 30px 0;
                            }
                            
                            .info-column {
                                display: table-cell;
                                width: 50%;
                                vertical-align: top;
                                padding: 0 15px;
                            }
                            
                            .info-box {
                                background: #f9fafb;
                                border: 2px solid #e5e7eb;
                                border-radius: 8px;
                                padding: 20px;
                                min-height: 180px;
                            }
                            
                            .info-box h4 {
                                color: #059669;
                                font-size: 14px;
                                font-weight: 700;
                                text-transform: uppercase;
                                margin-top: 0;
                                margin-bottom: 15px;
                                border-bottom: 2px solid #10b981;
                                padding-bottom: 8px;
                            }
                            
                            .info-line {
                                margin: 10px 0;
                                font-size: 11pt;
                            }
                            
                            .info-line strong {
                                color: #374151;
                                display: inline-block;
                                width: 120px;
                            }
                            
                            .summary-cards {
                                display: table;
                                width: 100%;
                                margin: 30px 0;
                                border-spacing: 15px;
                            }
                            
                            .summary-card {
                                display: table-cell;
                                background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
                                border: 2px solid #86efac;
                                border-radius: 10px;
                                padding: 20px;
                                text-align: center;
                                width: 25%;
                            }
                            
                            .summary-card.warning {
                                background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
                                border-color: #fbbf24;
                            }
                            
                            .summary-card.danger {
                                background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
                                border-color: #f87171;
                            }
                            
                            .summary-label {
                                font-size: 11px;
                                text-transform: uppercase;
                                font-weight: 600;
                                color: #065f46;
                                letter-spacing: 0.5px;
                            }
                            
                            .summary-card.warning .summary-label {
                                color: #92400e;
                            }
                            
                            .summary-card.danger .summary-label {
                                color: #991b1b;
                            }
                            
                            .summary-amount {
                                font-size: 24px;
                                font-weight: 700;
                                color: #047857;
                                margin-top: 10px;
                            }
                            
                            .summary-card.warning .summary-amount {
                                color: #b45309;
                            }
                            
                            .summary-card.danger .summary-amount {
                                color: #dc2626;
                            }
                            
                            .summary-detail {
                                font-size: 10px;
                                color: #6b7280;
                                margin-top: 8px;
                            }
                            
                            .transactions-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin: 30px 0;
                                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                                border-radius: 8px;
                                overflow: hidden;
                            }
                            
                            .transactions-table thead {
                                background: linear-gradient(135deg, #059669 0%, #10b981 100%);
                                color: white;
                            }
                            
                            .transactions-table th {
                                padding: 15px 12px;
                                text-align: left;
                                font-weight: 600;
                                font-size: 12px;
                                text-transform: uppercase;
                                letter-spacing: 0.5px;
                            }
                            
                            .transactions-table td {
                                padding: 12px;
                                border-bottom: 1px solid #e5e7eb;
                                font-size: 11pt;
                            }
                            
                            .transactions-table tbody tr:hover {
                                background: #f0fdf4;
                            }
                            
                            .transactions-table tbody tr:nth-child(even) {
                                background: #f9fafb;
                            }
                            
                            .status-badge {
                                padding: 4px 12px;
                                border-radius: 12px;
                                font-size: 10px;
                                font-weight: 600;
                                text-transform: uppercase;
                                display: inline-block;
                            }
                            
                            .status-paid {
                                background: #d1fae5;
                                color: #065f46;
                            }
                            
                            .status-unpaid {
                                background: #fee2e2;
                                color: #991b1b;
                            }
                            
                            .status-overdue {
                                background: #fed7aa;
                                color: #9a3412;
                            }
                            
                            .payment-type-badge {
                                font-size: 10px;
                                color: #6b7280;
                                background: #f3f4f6;
                                padding: 3px 8px;
                                border-radius: 8px;
                            }
                            
                            .totals-section {
                                background: #f9fafb;
                                border: 2px solid #059669;
                                border-radius: 10px;
                                padding: 25px;
                                margin: 30px 0;
                            }
                            
                            .total-row {
                                display: table;
                                width: 100%;
                                margin: 12px 0;
                                font-size: 13pt;
                            }
                            
                            .total-label {
                                display: table-cell;
                                font-weight: 600;
                                color: #374151;
                                width: 70%;
                            }
                            
                            .total-amount {
                                display: table-cell;
                                text-align: right;
                                font-weight: 700;
                                color: #1f2937;
                                width: 30%;
                            }
                            
                            .grand-total {
                                border-top: 3px solid #059669;
                                padding-top: 15px;
                                margin-top: 15px;
                                font-size: 18pt;
                            }
                            
                            .grand-total .total-label {
                                color: #059669;
                            }
                            
                            .grand-total .total-amount {
                                color: #059669;
                                font-size: 24pt;
                            }
                            
                            .payment-progress {
                                margin: 30px 0;
                            }
                            
                            .progress-bar-container {
                                background: #e5e7eb;
                                height: 30px;
                                border-radius: 15px;
                                overflow: hidden;
                                position: relative;
                                margin: 15px 0;
                            }
                            
                            .progress-bar {
                                background: linear-gradient(90deg, #059669 0%, #10b981 100%);
                                height: 100%;
                                transition: width 0.3s ease;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                color: white;
                                font-weight: 700;
                                font-size: 12px;
                            }
                            
                            .notes-section {
                                background: #fffbeb;
                                border-left: 4px solid #f59e0b;
                                padding: 20px;
                                margin: 30px 0;
                                border-radius: 5px;
                            }
                            
                            .notes-section h4 {
                                color: #92400e;
                                margin-top: 0;
                                font-size: 14px;
                            }
                            
                            .notes-section ul {
                                margin: 10px 0;
                                padding-left: 20px;
                            }
                            
                            .notes-section li {
                                margin: 8px 0;
                                color: #78350f;
                            }
                            
                            .footer-info {
                                margin-top: 50px;
                                padding-top: 20px;
                                border-top: 2px solid #e5e7eb;
                                text-align: center;
                                font-size: 10pt;
                                color: #6b7280;
                            }
                            
                            @media print {
                                .page-break {
                                    page-break-before: always;
                                }
                            }
                        </style>

                        <!-- Statement Header -->
                        <div class="statement-header">
                            <div class="statement-title">Statement of Account</div>
                            <div class="statement-subtitle">Detailed Payment Status and Transaction History</div>
                            <div class="statement-ref">
                                Account No: <t t-esc="o.name"/>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="info-grid">
                            <div class="info-column">
                                <div class="info-box">
                                    <h4>Account Holder Details</h4>
                                    <div class="info-line">
                                        <strong>Name:</strong>
                                        <span><t t-esc="o.partner_id.name"/></span>
                                    </div>
                                    <div class="info-line" t-if="o.partner_id.phone">
                                        <strong>Phone:</strong>
                                        <span><t t-esc="o.partner_id.phone"/></span>
                                    </div>
                                    <div class="info-line" t-if="o.partner_id.email">
                                        <strong>Email:</strong>
                                        <span><t t-esc="o.partner_id.email"/></span>
                                    </div>
                                    <div class="info-line" t-if="o.partner_id.vat">
                                        <strong>ID/Passport:</strong>
                                        <span><t t-esc="o.partner_id.vat"/></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="info-column">
                                <div class="info-box">
                                    <h4>Property Details</h4>
                                    <div class="info-line">
                                        <strong>Property:</strong>
                                        <span><t t-esc="o.property_id.name"/></span>
                                    </div>
                                    <div class="info-line" t-if="o.property_id.unit_no">
                                        <strong>Unit No:</strong>
                                        <span><t t-esc="o.property_id.unit_no"/></span>
                                    </div>
                                    <div class="info-line">
                                        <strong>Sale Date:</strong>
                                        <span><t t-esc="o.sale_date.strftime('%d %B %Y')"/></span>
                                    </div>
                                    <div class="info-line">
                                        <strong>Start Date:</strong>
                                        <span><t t-esc="o.start_date.strftime('%d %B %Y')"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Summary Cards -->
                        <div class="summary-cards">
                            <div class="summary-card">
                                <div class="summary-label">Total Price</div>
                                <div class="summary-amount">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.0f}'.format(o.total_selling_price)"/>
                                </div>
                                <div class="summary-detail">
                                    Contract Value
                                </div>
                            </div>
                            
                            <div class="summary-card">
                                <div class="summary-label">Amount Paid</div>
                                <div class="summary-amount">
                                    <t t-set="paid_amount" t-value="sum(o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'paid').mapped('capital_repayment'))"/>
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.0f}'.format(paid_amount)"/>
                                </div>
                                <div class="summary-detail">
                                    <t t-esc="'{:.1f}'.format(o.payment_progress)"/>% Complete
                                </div>
                            </div>
                            
                            <div class="summary-card warning">
                                <div class="summary-label">Outstanding</div>
                                <div class="summary-amount">
                                    <t t-set="outstanding" t-value="sum(o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'unpaid').mapped('capital_repayment'))"/>
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.0f}'.format(outstanding)"/>
                                </div>
                                <div class="summary-detail">
                                    <t t-set="unpaid_count" t-value="len(o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'unpaid'))"/>
                                    <t t-esc="unpaid_count"/> Pending Payments
                                </div>
                            </div>
                            
                            <div class="summary-card danger" t-if="o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'unpaid' and l.collection_date &lt; datetime.date.today())">
                                <div class="summary-label">Overdue</div>
                                <div class="summary-amount">
                                    <t t-set="overdue" t-value="sum(o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'unpaid' and l.collection_date &lt; datetime.date.today()).mapped('capital_repayment'))"/>
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.0f}'.format(overdue)"/>
                                </div>
                                <div class="summary-detail">
                                    Immediate Action Required
                                </div>
                            </div>
                        </div>

                        <!-- Payment Progress Bar -->
                        <div class="payment-progress">
                            <h3 style="color: #059669; font-size: 16px; margin-bottom: 10px;">Payment Progress</h3>
                            <div class="progress-bar-container">
                                <div class="progress-bar" t-attf-style="width: #{o.payment_progress}%;">
                                    <t t-esc="'{:.1f}'.format(o.payment_progress)"/>%
                                </div>
                            </div>
                            <div style="text-align: center; margin-top: 10px; color: #6b7280; font-size: 12px;">
                                <t t-set="paid_count" t-value="len(o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'paid'))"/>
                                <t t-set="total_count" t-value="len(o.property_sale_line_ids)"/>
                                <strong><t t-esc="paid_count"/> of <t t-esc="total_count"/> payments completed</strong>
                            </div>
                        </div>

                        <!-- Transaction History -->
                        <h3 style="color: #059669; font-size: 18px; margin-top: 40px; margin-bottom: 20px;">Transaction History</h3>
                        <table class="transactions-table">
                            <thead>
                                <tr>
                                    <th style="width: 8%;">No.</th>
                                    <th style="width: 22%;">Payment Type</th>
                                    <th style="width: 18%;">Due Date</th>
                                    <th style="width: 22%; text-align: right;">Amount</th>
                                    <th style="width: 15%;">Status</th>
                                    <th style="width: 15%;">Days</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.property_sale_line_ids.sorted(key=lambda x: x.serial_number)" t-as="line">
                                    <t t-set="days_diff" t-value="(datetime.date.today() - line.collection_date).days"/>
                                    <t t-set="is_overdue" t-value="line.collection_status == 'unpaid' and days_diff > 0"/>
                                    
                                    <tr>
                                        <td style="text-align: center; font-weight: 600;">
                                            <t t-esc="line.serial_number"/>
                                        </td>
                                        <td>
                                            <t t-if="line.line_type == 'downpayment'">
                                                <strong>Down Payment</strong>
                                            </t>
                                            <t t-elif="line.line_type == 'dld_fee'">
                                                DLD Registration Fee
                                            </t>
                                            <t t-elif="line.line_type == 'admin_fee'">
                                                Administrative Fee
                                            </t>
                                            <t t-else="">
                                                Monthly Installment
                                                <span class="payment-type-badge">
                                                    #<t t-esc="line.serial_number - 3"/>
                                                </span>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-esc="line.collection_date.strftime('%d %b %Y')"/>
                                        </td>
                                        <td style="text-align: right; font-weight: 600;">
                                            <t t-esc="o.currency_id.symbol"/>
                                            <t t-esc="'{:,.2f}'.format(line.capital_repayment)"/>
                                        </td>
                                        <td>
                                            <span t-if="line.collection_status == 'paid'" class="status-badge status-paid">
                                                ✓ Paid
                                            </span>
                                            <span t-elif="is_overdue" class="status-badge status-overdue">
                                                ! Overdue
                                            </span>
                                            <span t-else="" class="status-badge status-unpaid">
                                                Unpaid
                                            </span>
                                        </td>
                                        <td style="font-size: 10pt;">
                                            <t t-if="line.collection_status == 'paid'">
                                                <span style="color: #059669;">✓ Cleared</span>
                                            </t>
                                            <t t-elif="is_overdue">
                                                <span style="color: #dc2626; font-weight: 600;">
                                                    <t t-esc="days_diff"/> days late
                                                </span>
                                            </t>
                                            <t t-elif="days_diff == 0">
                                                <span style="color: #f59e0b; font-weight: 600;">Due Today</span>
                                            </t>
                                            <t t-else="">
                                                <span style="color: #6b7280;">
                                                    <t t-esc="abs(days_diff)"/> days
                                                </span>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Financial Summary -->
                        <div class="totals-section">
                            <h3 style="color: #059669; margin-top: 0; margin-bottom: 20px; font-size: 16px;">Financial Summary</h3>
                            
                            <div class="total-row">
                                <div class="total-label">Property Value</div>
                                <div class="total-amount">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.2f}'.format(o.property_value)"/>
                                </div>
                            </div>
                            
                            <div class="total-row">
                                <div class="total-label">DLD Fee (4%)</div>
                                <div class="total-amount">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.2f}'.format(o.dld_fee)"/>
                                </div>
                            </div>
                            
                            <div class="total-row">
                                <div class="total-label">Administrative Fee</div>
                                <div class="total-amount">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.2f}'.format(o.admin_fee)"/>
                                </div>
                            </div>
                            
                            <div class="total-row grand-total">
                                <div class="total-label">TOTAL CONTRACT VALUE</div>
                                <div class="total-amount">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <t t-esc="'{:,.2f}'.format(o.total_selling_price)"/>
                                </div>
                            </div>
                            
                            <div style="margin-top: 25px; padding-top: 20px; border-top: 2px dashed #d1d5db;">
                                <div class="total-row" style="color: #059669;">
                                    <div class="total-label">Total Paid to Date</div>
                                    <div class="total-amount">
                                        <t t-esc="o.currency_id.symbol"/>
                                        <t t-esc="'{:,.2f}'.format(paid_amount)"/>
                                    </div>
                                </div>
                                
                                <div class="total-row" style="color: #f59e0b;">
                                    <div class="total-label">Balance Outstanding</div>
                                    <div class="total-amount">
                                        <t t-esc="o.currency_id.symbol"/>
                                        <t t-esc="'{:,.2f}'.format(outstanding)"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information Notes -->
                        <div class="notes-section">
                            <h4>Important Payment Information</h4>
                            <ul>
                                <li><strong>Next Payment Due:</strong> 
                                    <t t-set="next_payment" t-value="o.property_sale_line_ids.filtered(lambda l: l.collection_status == 'unpaid').sorted(key=lambda x: x.collection_date)[:1]"/>
                                    <t t-if="next_payment">
                                        <t t-esc="o.currency_id.symbol"/><t t-esc="'{:,.2f}'.format(next_payment.capital_repayment)"/> 
                                        on <t t-esc="next_payment.collection_date.strftime('%d %B %Y')"/>
                                    </t>
                                    <t t-else="">All payments completed</t>
                                </li>
                                <li><strong>Payment Method:</strong> Bank Transfer / Cheque / Credit Card (as per contract)</li>
                                <li><strong>Late Payment:</strong> Charges of 1.5% per month apply after 15 days grace period</li>
                                <li><strong>Early Payment:</strong> Accepted without penalty, please contact our office</li>
                                <li><strong>Statement Date:</strong> <t t-esc="datetime.datetime.now().strftime('%d %B %Y')"/></li>
                            </ul>
                        </div>

                        <!-- Contact Information -->
                        <div style="background: #f9fafb; border: 2px solid #e5e7eb; padding: 20px; border-radius: 8px; margin-top: 30px;">
                            <h4 style="color: #059669; margin-top: 0; margin-bottom: 15px;">For Payment Queries, Contact:</h4>
                            <div style="display: table; width: 100%;">
                                <div style="display: table-cell; width: 50%; padding-right: 20px;">
                                    <div style="margin: 8px 0;">
                                        <strong>Company:</strong> <t t-esc="o.company_id.name"/>
                                    </div>
                                    <div style="margin: 8px 0;" t-if="o.company_id.phone">
                                        <strong>Phone:</strong> <t t-esc="o.company_id.phone"/>
                                    </div>
                                </div>
                                <div style="display: table-cell; width: 50%;">
                                    <div style="margin: 8px 0;" t-if="o.company_id.email">
                                        <strong>Email:</strong> <t t-esc="o.company_id.email"/>
                                    </div>
                                    <div style="margin: 8px 0;" t-if="o.company_id.website">
                                        <strong>Website:</strong> <t t-esc="o.company_id.website"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="footer-info">
                            <p style="font-weight: 600; color: #059669; margin-bottom: 10px;">
                                Thank you for choosing us for your property investment!
                            </p>
                            <p style="margin: 5px 0;">
                                <strong>Statement Reference:</strong> <t t-esc="o.name"/> | 
                                <strong>Generated:</strong> <t t-esc="datetime.datetime.now().strftime('%d %B %Y at %H:%M')"/>
                            </p>
                            <p style="margin-top: 15px; font-size: 9pt; color: #9ca3af;">
                                This statement is computer-generated and accurate as of the generation date.
                                For the most current information, please contact our accounts department.
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Action for Statement of Account -->
    <record id="action_statement_of_account_report" model="ir.actions.report">
        <field name="name">Statement of Account</field>
        <field name="model">property.sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_management.statement_of_account_template</field>
        <field name="report_file">property_management.statement_of_account_template</field>
        <field name="binding_model_id" ref="model_property_sale"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Statement_of_Account_%s_%s' % (object.name, object.partner_id.name.replace(' ', '_'))</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
</odoo>
