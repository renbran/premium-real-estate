<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ✅ Extend Form View for Account Move -->
        <record id="view_account_move_form_inherit_property_fields" model="ir.ui.view">
            <field name="name">account.move.form.inherit.property.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Safe insertion after existing field -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="property_order_id"/>
                    <field name="broker_commission_id"/>
                </xpath>
            </field>
        </record>

        <!-- ✅ Extend Tree View for Account Move -->
        <record id="view_account_move_tree_inherit_property" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.property</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="property_order_id"/>
                    <field name="broker_commission_id"/>
                </xpath>
            </field>
        </record>

        <!-- ✅ Optional: Custom Action and Menu Entry -->
        <record id="action_account_move_custom_form" model="ir.actions.act_window">
            <field name="name">Invoices (Property/Broker)</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first invoice</p>
                <p>Manage invoices related to property sales, and broker commissions.</p>
            </field>
        </record>

        <menuitem id="menu_account_move_custom"
                  name="Invoices"
                  parent="account.menu_finance"
                  action="action_account_move_custom_form"
                  sequence="10"/>
    </data>
</odoo>
