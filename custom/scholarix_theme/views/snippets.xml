<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Website Snippets for Scholarix Theme -->
        <template id="scholarix_snippets" name="Scholarix Theme Snippets" inherit_id="website.snippets">
            
            <!-- AI Services Card Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_ai_services">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/ai-services-thumb.png" alt="AI Services"/>
                        <span class="oe_snippet_thumbnail_title">AI Services Cards</span>
                    </div>
                    <section class="scholarix-snippet-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-service-card" data-aos="fade-up" data-aos-delay="100">
                                        <div class="scholarix-service-icon">
                                            <i class="fas fa-brain"></i>
                                        </div>
                                        <div class="scholarix-service-content">
                                            <h4>AI Strategy</h4>
                                            <p>Strategic AI implementation and digital transformation consulting.</p>
                                        </div>
                                        <div class="scholarix-service-action">
                                            <a href="#" class="scholarix-service-link">
                                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-service-card" data-aos="fade-up" data-aos-delay="200">
                                        <div class="scholarix-service-icon">
                                            <i class="fas fa-robot"></i>
                                        </div>
                                        <div class="scholarix-service-content">
                                            <h4>Machine Learning</h4>
                                            <p>Custom ML models and algorithms for business optimization.</p>
                                        </div>
                                        <div class="scholarix-service-action">
                                            <a href="#" class="scholarix-service-link">
                                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-service-card" data-aos="fade-up" data-aos-delay="300">
                                        <div class="scholarix-service-icon">
                                            <i class="fas fa-chart-line"></i>
                                        </div>
                                        <div class="scholarix-service-content">
                                            <h4>Data Analytics</h4>
                                            <p>Advanced analytics and business intelligence solutions.</p>
                                        </div>
                                        <div class="scholarix-service-action">
                                            <a href="#" class="scholarix-service-link">
                                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- Tech Showcase Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_tech_showcase">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/tech-showcase-thumb.png" alt="Tech Showcase"/>
                        <span class="oe_snippet_thumbnail_title">Technology Showcase</span>
                    </div>
                    <section class="scholarix-snippet-body scholarix-tech-section">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <div class="scholarix-tech-content">
                                        <h2 class="scholarix-section-title">
                                            Cutting-Edge <span class="scholarix-text-gradient">AI Technologies</span>
                                        </h2>
                                        <p class="scholarix-section-text">
                                            We leverage the latest artificial intelligence technologies to deliver 
                                            innovative solutions for modern business challenges.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="scholarix-tech-showcase">
                                        <div class="scholarix-tech-circle active" data-tech="ai">
                                            <i class="fas fa-brain"></i>
                                            <span>Artificial Intelligence</span>
                                        </div>
                                        <div class="scholarix-tech-circle" data-tech="ml">
                                            <i class="fas fa-robot"></i>
                                            <span>Machine Learning</span>
                                        </div>
                                        <div class="scholarix-tech-circle" data-tech="data">
                                            <i class="fas fa-database"></i>
                                            <span>Big Data</span>
                                        </div>
                                        <div class="scholarix-tech-circle" data-tech="cloud">
                                            <i class="fas fa-cloud"></i>
                                            <span>Cloud Computing</span>
                                        </div>
                                        <div class="scholarix-tech-connections"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- Statistics Counter Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_stats">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/stats-thumb.png" alt="Statistics"/>
                        <span class="oe_snippet_thumbnail_title">Statistics Counter</span>
                    </div>
                    <section class="scholarix-snippet-body scholarix-stats-section">
                        <div class="container">
                            <div class="row text-center">
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-stat-item" data-aos="zoom-in" data-aos-delay="100">
                                        <div class="scholarix-stat-icon">
                                            <i class="fas fa-project-diagram"></i>
                                        </div>
                                        <div class="scholarix-stat-number" data-target="150">0</div>
                                        <div class="scholarix-stat-label">AI Projects Completed</div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-stat-item" data-aos="zoom-in" data-aos-delay="200">
                                        <div class="scholarix-stat-icon">
                                            <i class="fas fa-users"></i>
                                        </div>
                                        <div class="scholarix-stat-number" data-target="89">0</div>
                                        <div class="scholarix-stat-label">Happy Clients</div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-stat-item" data-aos="zoom-in" data-aos-delay="300">
                                        <div class="scholarix-stat-icon">
                                            <i class="fas fa-award"></i>
                                        </div>
                                        <div class="scholarix-stat-number" data-target="98">0</div>
                                        <div class="scholarix-stat-label">Success Rate %</div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-stat-item" data-aos="zoom-in" data-aos-delay="400">
                                        <div class="scholarix-stat-icon">
                                            <i class="fas fa-globe"></i>
                                        </div>
                                        <div class="scholarix-stat-number" data-target="24">0</div>
                                        <div class="scholarix-stat-label">Countries Served</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- AI Hero Banner Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_hero_banner">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/hero-banner-thumb.png" alt="Hero Banner"/>
                        <span class="oe_snippet_thumbnail_title">AI Hero Banner</span>
                    </div>
                    <section class="scholarix-snippet-body scholarix-hero-banner">
                        <div class="scholarix-hero-bg">
                            <div class="scholarix-hero-particles"></div>
                            <div class="scholarix-hero-grid"></div>
                        </div>
                        <div class="container">
                            <div class="row align-items-center min-vh-50">
                                <div class="col-lg-8 mx-auto text-center">
                                    <div class="scholarix-hero-content">
                                        <div class="scholarix-hero-badge">
                                            <span class="scholarix-pulse-dot"></span>
                                            Next-Gen AI Solutions
                                        </div>
                                        <h1 class="scholarix-hero-title">
                                            Transform Your Business with 
                                            <span class="scholarix-text-gradient">Artificial Intelligence</span>
                                        </h1>
                                        <p class="scholarix-hero-subtitle">
                                            Unlock the power of AI to drive innovation, optimize processes, 
                                            and accelerate your digital transformation journey.
                                        </p>
                                        <div class="scholarix-hero-actions">
                                            <a href="#contact" class="btn btn-primary scholarix-btn-primary me-3">
                                                <i class="fas fa-rocket me-2"></i>Get Started
                                            </a>
                                            <a href="#about" class="btn btn-outline-primary scholarix-btn-outline">
                                                <i class="fas fa-info-circle me-2"></i>Learn More
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- Team Member Card Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_team_card">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/team-card-thumb.png" alt="Team Card"/>
                        <span class="oe_snippet_thumbnail_title">Team Member Card</span>
                    </div>
                    <section class="scholarix-snippet-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-team-card" data-aos="fade-up">
                                        <div class="scholarix-team-image">
                                            <img src="/scholarix_theme/static/src/img/team/member-1.jpg" alt="Team Member" class="img-fluid"/>
                                            <div class="scholarix-team-overlay">
                                                <div class="scholarix-team-social">
                                                    <a href="#" class="scholarix-social-link">
                                                        <i class="fab fa-linkedin-in"></i>
                                                    </a>
                                                    <a href="#" class="scholarix-social-link">
                                                        <i class="fab fa-twitter"></i>
                                                    </a>
                                                    <a href="#" class="scholarix-social-link">
                                                        <i class="fab fa-github"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="scholarix-team-content">
                                            <h4>Dr. Sarah Chen</h4>
                                            <p>AI Research Director</p>
                                            <span>PhD in Machine Learning, 10+ years in AI research</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- Process Steps Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_process_steps">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/process-steps-thumb.png" alt="Process Steps"/>
                        <span class="oe_snippet_thumbnail_title">AI Process Steps</span>
                    </div>
                    <section class="scholarix-snippet-body scholarix-process-section">
                        <div class="container">
                            <div class="scholarix-section-header text-center mb-5">
                                <h2 class="scholarix-section-title">
                                    Our AI <span class="scholarix-text-gradient">Implementation Process</span>
                                </h2>
                                <p class="scholarix-section-text">
                                    A systematic approach to delivering successful AI solutions
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-process-step" data-aos="fade-up" data-aos-delay="100">
                                        <div class="scholarix-step-number">01</div>
                                        <div class="scholarix-step-icon">
                                            <i class="fas fa-search"></i>
                                        </div>
                                        <h4>Discovery &amp; Analysis</h4>
                                        <p>Understanding your business needs and identifying AI opportunities.</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-process-step" data-aos="fade-up" data-aos-delay="200">
                                        <div class="scholarix-step-number">02</div>
                                        <div class="scholarix-step-icon">
                                            <i class="fas fa-drafting-compass"></i>
                                        </div>
                                        <h4>Strategy &amp; Planning</h4>
                                        <p>Developing a comprehensive AI roadmap and implementation strategy.</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-process-step" data-aos="fade-up" data-aos-delay="300">
                                        <div class="scholarix-step-number">03</div>
                                        <div class="scholarix-step-icon">
                                            <i class="fas fa-code"></i>
                                        </div>
                                        <h4>Development &amp; Training</h4>
                                        <p>Building and training custom AI models tailored to your requirements.</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <div class="scholarix-process-step" data-aos="fade-up" data-aos-delay="400">
                                        <div class="scholarix-step-number">04</div>
                                        <div class="scholarix-step-icon">
                                            <i class="fas fa-rocket"></i>
                                        </div>
                                        <h4>Deployment &amp; Support</h4>
                                        <p>Launching your AI solution with ongoing monitoring and optimization.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
            <!-- Testimonial Slider Snippet -->
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="oe_snippet scholarix-snippet" data-snippet="s_scholarix_testimonials">
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/scholarix_theme/static/src/img/snippets/testimonials-thumb.png" alt="Testimonials"/>
                        <span class="oe_snippet_thumbnail_title">Client Testimonials</span>
                    </div>
                    <section class="scholarix-snippet-body scholarix-testimonials-section">
                        <div class="container">
                            <div class="scholarix-section-header text-center mb-5">
                                <h2 class="scholarix-section-title">
                                    What Our <span class="scholarix-text-gradient">Clients Say</span>
                                </h2>
                            </div>
                            <div class="scholarix-testimonials-slider">
                                <div class="scholarix-testimonial-item active">
                                    <div class="scholarix-testimonial-content">
                                        <div class="scholarix-testimonial-text">
                                            "Scholarix transformed our operations with their AI solutions. 
                                            The efficiency gains have been remarkable, and their team's 
                                            expertise is unmatched in the industry."
                                        </div>
                                        <div class="scholarix-testimonial-author">
                                            <img src="/scholarix_theme/static/src/img/testimonials/client-1.jpg" alt="Client" class="scholarix-author-image"/>
                                            <div class="scholarix-author-info">
                                                <h5>John Richardson</h5>
                                                <span>CEO, TechCorp Industries</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            
        </template>
        
        <!-- Snippet Options -->
        <template id="scholarix_snippet_options" name="Scholarix Snippet Options" inherit_id="web_editor.snippet_options">
            <!-- AI Service Card Options -->
            <xpath expr="." position="inside">
                <div data-js="ScholarixServiceCard" data-selector=".scholarix-service-card" data-drop-in=".scholarix-service-card">
                    <we-button data-set-icon="fa-brain" title="Brain Icon">Brain</we-button>
                    <we-button data-set-icon="fa-robot" title="Robot Icon">Robot</we-button>
                    <we-button data-set-icon="fa-chart-line" title="Chart Icon">Chart</we-button>
                    <we-button data-set-icon="fa-cogs" title="Cogs Icon">Cogs</we-button>
                    <we-button data-set-icon="fa-eye" title="Eye Icon">Eye</we-button>
                    <we-button data-set-icon="fa-comments" title="Comments Icon">Comments</we-button>
                </div>
            </xpath>
            
            <!-- Color Scheme Options -->
            <xpath expr="." position="inside">
                <div data-js="ScholarixColorScheme" data-selector=".scholarix-service-card, .scholarix-hero-banner, .scholarix-stats-section">
                    <we-button data-set-scheme="blue" title="Electric Blue">Blue</we-button>
                    <we-button data-set-scheme="purple" title="Holographic Purple">Purple</we-button>
                    <we-button data-set-scheme="cyan" title="Neon Cyan">Cyan</we-button>
                    <we-button data-set-scheme="gradient" title="Gradient Mix">Gradient</we-button>
                </div>
            </xpath>
            
            <!-- Animation Options -->
            <xpath expr="." position="inside">
                <div data-js="ScholarixAnimation" data-selector=".scholarix-service-card, .scholarix-team-card, .scholarix-process-step">
                    <we-button data-set-animation="fade-up" title="Fade Up">Fade Up</we-button>
                    <we-button data-set-animation="fade-in" title="Fade In">Fade In</we-button>
                    <we-button data-set-animation="zoom-in" title="Zoom In">Zoom In</we-button>
                    <we-button data-set-animation="slide-left" title="Slide Left">Slide Left</we-button>
                    <we-button data-set-animation="slide-right" title="Slide Right">Slide Right</we-button>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>
