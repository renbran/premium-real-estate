<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Base Layout Template -->
        <template id="scholarix_layout" name="Scholarix Theme Layout" inherit_id="website.layout">
            <xpath expr="//head" position="inside">
                <!-- Theme Meta Tags -->
                <meta name="theme-color" content="#00E5FF"/>
                <meta name="msapplication-navbutton-color" content="#00E5FF"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="default"/>
                
                <!-- Preload Critical Fonts -->
                <link rel="preload" href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&amp;family=Rajdhani:wght@300;400;500;600;700&amp;display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
                <noscript>
                    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&amp;family=Rajdhani:wght@300;400;500;600;700&amp;display=swap"/>
                </noscript>
                
                <!-- Theme Variables -->
                <style>
                    :root {
                        --scroll-y: 0px;
                        --mouse-x: 50%;
                        --mouse-y: 50%;
                    }
                </style>
            </xpath>
            
            <!-- Add theme classes to body -->
            <xpath expr="//body" position="attributes">
                <attribute name="class" add="scholarix-theme" separator=" "/>
            </xpath>
            
            <!-- Add particles container -->
            <xpath expr="//body" position="inside">
                <div id="scholarix-particles" class="scholarix-particles-container"></div>
                <div id="scholarix-matrix" class="scholarix-matrix-container"></div>
                <main id="main-content" role="main" style="position: relative; z-index: 1;">
                    <!-- Main content will be injected here -->
                </main>
            </xpath>
        </template>
        
        <!-- Custom Navigation Bar -->
        <template id="scholarix_navbar" name="Scholarix Navigation" inherit_id="website.layout">
            <xpath expr="//header//nav[hasclass('navbar')]" position="replace">
                <nav class="navbar navbar-expand-lg navbar-dark scholarix-navbar fixed-top" role="navigation">
                    <div class="container">
                        <!-- Brand Logo -->
                        <a class="navbar-brand scholarix-brand" href="/" t-field="website.name">
                            <img src="/scholarix_theme/static/src/img/logo.png" alt="Scholarix Global Consultants" class="scholarix-logo" height="40"/>
                            <span class="scholarix-brand-text" t-esc="website.name">Scholarix Global</span>
                        </a>
                        
                        <!-- Mobile Toggle Button -->
                        <button class="navbar-toggler scholarix-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#scholarixNavbar" aria-controls="scholarixNavbar" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="scholarix-toggler-icon"></span>
                            <span class="scholarix-toggler-icon"></span>
                            <span class="scholarix-toggler-icon"></span>
                        </button>
                        
                        <!-- Navigation Menu -->
                        <div class="collapse navbar-collapse" id="scholarixNavbar">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="#home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#about">About</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Services
                                    </a>
                                    <ul class="dropdown-menu scholarix-dropdown" aria-labelledby="servicesDropdown">
                                        <li><a class="dropdown-item" href="#ai-consulting">AI Consulting</a></li>
                                        <li><a class="dropdown-item" href="#data-analytics">Data Analytics</a></li>
                                        <li><a class="dropdown-item" href="#machine-learning">Machine Learning</a></li>
                                        <li><a class="dropdown-item" href="#digital-transformation">Digital Transformation</a></li>
                                        <li><hr class="dropdown-divider"/></li>
                                        <li><a class="dropdown-item" href="/services">View All Services</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#portfolio">Portfolio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/blog">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#contact">Contact</a>
                                </li>
                                
                                <!-- CTA Button -->
                                <li class="nav-item ms-3">
                                    <a class="btn btn-primary scholarix-cta-nav" href="#consultation">
                                        <i class="fas fa-rocket me-2"></i>Get Started
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </xpath>
        </template>
        
        <!-- Custom Footer -->
        <template id="scholarix_footer" name="Scholarix Footer" inherit_id="website.layout">
            <xpath expr="//footer" position="replace">
                <footer class="scholarix-footer">
                    <!-- Main Footer Content -->
                    <div class="scholarix-footer-main">
                        <div class="container">
                            <div class="row">
                                <!-- Company Info -->
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-footer-section">
                                        <h4 class="scholarix-footer-title">
                                            <img src="/scholarix_theme/static/src/img/logo.png" alt="Logo" height="30" class="me-2"/>
                                            <span t-esc="website.name">Scholarix Global</span>
                                        </h4>
                                        <p class="scholarix-footer-desc">
                                            Pioneering the future of AI technology and digital transformation. 
                                            We empower businesses with cutting-edge artificial intelligence solutions.
                                        </p>
                                        <div class="scholarix-social-links">
                                            <a href="#" class="scholarix-social-link" aria-label="Facebook">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a href="#" class="scholarix-social-link" aria-label="Twitter">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a href="#" class="scholarix-social-link" aria-label="LinkedIn">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                            <a href="#" class="scholarix-social-link" aria-label="GitHub">
                                                <i class="fab fa-github"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Services Links -->
                                <div class="col-lg-2 col-md-6 mb-4">
                                    <div class="scholarix-footer-section">
                                        <h5 class="scholarix-footer-subtitle">Services</h5>
                                        <ul class="scholarix-footer-links">
                                            <li><a href="#ai-consulting">AI Consulting</a></li>
                                            <li><a href="#data-analytics">Data Analytics</a></li>
                                            <li><a href="#machine-learning">Machine Learning</a></li>
                                            <li><a href="#automation">Process Automation</a></li>
                                            <li><a href="#cloud-solutions">Cloud Solutions</a></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <!-- Company Links -->
                                <div class="col-lg-2 col-md-6 mb-4">
                                    <div class="scholarix-footer-section">
                                        <h5 class="scholarix-footer-subtitle">Company</h5>
                                        <ul class="scholarix-footer-links">
                                            <li><a href="#about">About Us</a></li>
                                            <li><a href="#team">Our Team</a></li>
                                            <li><a href="#careers">Careers</a></li>
                                            <li><a href="#news">News</a></li>
                                            <li><a href="#partners">Partners</a></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <!-- Contact Info -->
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="scholarix-footer-section">
                                        <h5 class="scholarix-footer-subtitle">Contact Info</h5>
                                        <div class="scholarix-contact-info">
                                            <div class="scholarix-contact-item">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <span>123 Innovation Drive, Tech City, TC 12345</span>
                                            </div>
                                            <div class="scholarix-contact-item">
                                                <i class="fas fa-phone"></i>
                                                <span>+1 (555) 123-4567</span>
                                            </div>
                                            <div class="scholarix-contact-item">
                                                <i class="fas fa-envelope"></i>
                                                <span>info@scholarixglobal.com</span>
                                            </div>
                                            <div class="scholarix-contact-item">
                                                <i class="fas fa-clock"></i>
                                                <span>Mon - Fri: 9:00 AM - 6:00 PM</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Footer Bottom -->
                    <div class="scholarix-footer-bottom">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <p class="scholarix-copyright">
                                        Â© <span t-esc="datetime.datetime.now().year">2024</span> 
                                        <span t-esc="website.name">Scholarix Global</span>. 
                                        All rights reserved.
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <ul class="scholarix-footer-legal">
                                        <li><a href="/privacy-policy">Privacy Policy</a></li>
                                        <li><a href="/terms-of-service">Terms of Service</a></li>
                                        <li><a href="/cookie-policy">Cookie Policy</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Background Effects -->
                    <div class="scholarix-footer-effects">
                        <div class="scholarix-circuit-pattern"></div>
                        <div class="scholarix-gradient-orb"></div>
                    </div>
                </footer>
            </xpath>
        </template>
        
        <!-- Loading Screen -->
        <template id="scholarix_loading_screen" name="Scholarix Loading Screen">
            <div id="scholarix-loading" class="scholarix-loading-screen">
                <div class="scholarix-loading-content">
                    <div class="scholarix-loading-logo">
                        <img src="/scholarix_theme/static/src/img/logo.png" alt="Loading..." />
                    </div>
                    <div class="scholarix-loading-text">
                        <h2>Initializing AI Systems</h2>
                        <div class="scholarix-loading-dots">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                    <div class="scholarix-progress-bar">
                        <div class="scholarix-progress-fill"></div>
                    </div>
                </div>
                <div class="scholarix-loading-particles"></div>
            </div>
        </template>
        
        <!-- 404 Error Page -->
        <template id="scholarix_404" name="Scholarix 404 Page" inherit_id="website.404">
            <xpath expr="//div[hasclass('oe_structure')]" position="replace">
                <div class="scholarix-error-page">
                    <div class="container">
                        <div class="row justify-content-center align-items-center min-vh-100">
                            <div class="col-lg-8 text-center">
                                <div class="scholarix-error-content">
                                    <div class="scholarix-error-code">
                                        <span class="scholarix-glitch" data-text="404">404</span>
                                    </div>
                                    <h1 class="scholarix-error-title">
                                        System Error: Page Not Found
                                    </h1>
                                    <p class="scholarix-error-desc">
                                        The requested resource could not be located in our neural network. 
                                        Our AI systems are working to resolve this anomaly.
                                    </p>
                                    <div class="scholarix-error-actions">
                                        <a href="/" class="btn btn-primary scholarix-btn-glow">
                                            <i class="fas fa-home me-2"></i>Return to Base
                                        </a>
                                        <a href="#contact" class="btn btn-outline-primary ms-3">
                                            <i class="fas fa-support me-2"></i>Contact Support
                                        </a>
                                    </div>
                                </div>
                                <div class="scholarix-error-visual">
                                    <div class="scholarix-hologram-effect"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>
