<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission Profit Analysis Wizard Views -->

    <!-- Form View -->
    <record id="commission_profit_analysis_wizard_form" model="ir.ui.view">
        <field name="name">commission.profit.analysis.wizard.form</field>
        <field name="model">commission.profit.analysis.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Commission Profit Analysis Report</h1>
                        <p>Generate comprehensive profit analysis reports for commission data with category breakdown and impact analysis.</p>
                    </div>

                    <group>
                        <group name="filters">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="commission_state"/>
                        </group>

                        <group name="options">
                            <field name="report_format" widget="radio"/>
                            <field name="include_categories"/>
                            <field name="show_profit_impact"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary" data-hotkey="q"/>
                    <button name="action_preview_data" string="Preview Data" type="object" class="btn-secondary" data-hotkey="p"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_commission_profit_analysis_wizard" model="ir.actions.act_window">
        <field name="name">Commission Profit Analysis</field>
        <field name="res_model">commission.profit.analysis.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="commission_profit_analysis_wizard_form"/>
    </record>

    <!-- Menu Item -->
    <!-- Add menu item for the wizard -->
    <menuitem id="menu_commission_profit_analysis" name="Profit Analysis Report" parent="menu_commission_ax_reports" action="action_commission_profit_analysis_wizard" sequence="20"/>
</odoo>