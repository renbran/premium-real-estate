<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action: Update Commission Payment Status -->
        <record id="cron_update_commission_payment_status" model="ir.cron">
            <field name="name">Commission: Update Payment Status</field>
            <field name="model_id" ref="model_commission_line"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_payment_status()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>

        <!-- Scheduled Action: Send Overdue Payment Notifications -->
        <record id="cron_commission_overdue_notifications" model="ir.cron">
            <field name="name">Commission: Send Overdue Notifications</field>
            <field name="model_id" ref="model_commission_line"/>
            <field name="state">code</field>
            <field name="code">model.send_overdue_notification()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>

        <!-- Scheduled Action: Commission Aging Report -->
        <record id="cron_commission_aging_update" model="ir.cron">
            <field name="name">Commission: Update Aging Categories</field>
            <field name="model_id" ref="model_commission_line"/>
            <field name="state">code</field>
            <field name="code">lines = model.search([('state', 'in', ['processed', 'paid'])])
lines._compute_aging()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>

        <!-- Scheduled Action: Commission Alert Creation -->
        <record id="cron_create_commission_alerts" model="ir.cron">
            <field name="name">Commission: Create Payment Alerts</field>
            <field name="model_id" ref="model_commission_alert"/>
            <field name="state">code</field>
            <field name="code">model.create_overdue_alerts()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>
    </data>
</odoo>