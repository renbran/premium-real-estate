<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Commission Types -->
        <record id="commission_type_external" model="commission.type">
            <field name="sequence">10</field>
            <field name="name">External Commission</field>
            <field name="code">EXTERNAL</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">external</field>
            <field name="description">Commission for external sales agents and brokers</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_internal" model="commission.type">
            <field name="sequence">20</field>
            <field name="name">Internal Commission</field>
            <field name="code">INTERNAL</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">internal</field>
            <field name="description">Commission for internal sales team members</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_referral" model="commission.type">
            <field name="sequence">30</field>
            <field name="name">Referral Commission</field>
            <field name="code">REFERRAL</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">external</field>
            <field name="description">Commission for client referrals and leads</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_bonus" model="commission.type">
            <field name="sequence">40</field>
            <field name="name">Bonus Commission</field>
            <field name="code">BONUS</field>
            <field name="calculation_method">fixed</field>
            <field name="default_rate">0.0</field>
            <field name="category">internal</field>
            <field name="description">Fixed bonus commission for special achievements</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_manager" model="commission.type">
            <field name="sequence">50</field>
            <field name="name">Manager Override Commission</field>
            <field name="code">MANAGER</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">internal</field>
            <field name="description">Management override commission</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_director" model="commission.type">
            <field name="sequence">60</field>
            <field name="name">Director Commission</field>
            <field name="code">DIRECTOR</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">internal</field>
            <field name="description">Director level commission</field>
            <field name="active" eval="True"/>
        </record>

        <record id="commission_type_broker" model="commission.type">
            <field name="sequence">70</field>
            <field name="name">Broker Commission</field>
            <field name="code">BROKER</field>
            <field name="calculation_method">percentage</field>
            <field name="default_rate">0.0</field>
            <field name="category">external</field>
            <field name="description">External broker commission</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>