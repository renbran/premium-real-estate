<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add SCHOLARIX Print Button to Invoice Form View -->
        <record id="view_move_form_scholarix" model="ir.ui.view">
            <field name="name">account.move.form.scholarix</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
            <button name="action_print_scholarix_invoice" 
                string="ðŸ“„ SCHOLARIX Invoice" 
                type="object" 
                class="btn-primary"
                invisible="move_type not in ('out_invoice','out_refund')"/>
                </xpath>
            </field>
        </record>

        <!-- Add action to invoice tree view context menu -->
        <record id="action_print_scholarix_invoice_multi" model="ir.actions.server">
            <field name="name">Print SCHOLARIX Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">
                action = records.action_print_scholarix_invoice()
            </field>
        </record>

        <!-- Custom menu item for SCHOLARIX Invoice Reports -->
        <menuitem id="menu_scholarix_invoice_reports_root"
                  name="ðŸ“Š SCHOLARIX Invoice Reports"
                  parent="account.menu_finance_reports"
                  sequence="100"/>

        <menuitem id="menu_scholarix_invoice_reports"
                  name="Invoice Reports"
                  parent="menu_scholarix_invoice_reports_root"
                  action="action_report_scholarix_invoice"
                  sequence="10"/>
    </data>
</odoo>