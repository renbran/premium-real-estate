<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Custom CSS Styles for SCHOLARIX Reports -->
        <template id="scholarix_report_styles" name="SCHOLARIX Report Styles">
            <style type="text/css">
                /* SCHOLARIX Report Styles */
                @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap');
                
                /* Root Variables */
                :root {
                    --scholarix-primary: #0080FF;
                    --scholarix-accent: #00FFFF;
                    --scholarix-dark: #1B365D;
                    --scholarix-gray: #6B7280;
                    --scholarix-light-gray: #F3F4F6;
                    --scholarix-white: #FFFFFF;
                    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                }

                /* Global Styles */
                .o_report_layout_container {
                    font-family: var(--font-family);
                    color: var(--scholarix-dark);
                    background: var(--scholarix-white);
                    font-size: 12px;
                    line-height: 1.5;
                }

                /* Company Header */
                .o_company_header {
                    background: linear-gradient(135deg, var(--scholarix-primary) 0%, var(--scholarix-dark) 100%);
                    color: var(--scholarix-white);
                    padding: 20px;
                    margin-bottom: 20px;
                    border-radius: 8px;
                }

                .company_header_row {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .company_logo_section {
                    display: flex;
                    align-items: center;
                    gap: 15px;
                }

                .o_company_logo {
                    width: 50px;
                    height: 50px;
                    background: var(--scholarix-accent);
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-weight: 700;
                    font-size: 24px;
                    color: var(--scholarix-dark);
                }

                .o_company_name {
                    font-size: 24px;
                    font-weight: 700;
                    letter-spacing: 2px;
                }

                .o_company_tagline {
                    font-size: 12px;
                    font-weight: 300;
                    letter-spacing: 1px;
                    opacity: 0.9;
                }

                /* Invoice Details */
                .invoice_details_section {
                    display: flex;
                    justify-content: space-between;
                    margin-bottom: 30px;
                    gap: 30px;
                }

                .invoice_details_box {
                    flex: 1;
                    background: var(--scholarix-light-gray);
                    padding: 15px;
                    border-radius: 6px;
                    border-left: 4px solid var(--scholarix-primary);
                }

                .invoice_details_header {
                    font-weight: 600;
                    color: var(--scholarix-dark);
                    margin-bottom: 10px;
                    font-size: 14px;
                }

                /* Tables */
                .o_main_table {
                    width: 100%;
                    border-collapse: collapse;
                    margin: 20px 0;
                    background: var(--scholarix-white);
                    border-radius: 6px;
                    overflow: hidden;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                }

                .o_main_table th {
                    background: var(--scholarix-primary);
                    color: var(--scholarix-white);
                    padding: 12px;
                    text-align: left;
                    font-weight: 600;
                    font-size: 11px;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                }

                .o_main_table td {
                    padding: 12px;
                    border-bottom: 1px solid #E5E7EB;
                    vertical-align: top;
                }

                .o_main_table tr:hover {
                    background: #F9FAFB;
                }

                /* Totals Section */
                .totals_section {
                    margin-top: 30px;
                    display: flex;
                    justify-content: flex-end;
                }

                .totals_table {
                    min-width: 300px;
                    border-collapse: collapse;
                }

                .totals_table tr {
                    border-bottom: 1px solid #E5E7EB;
                }

                .totals_table tr:last-child {
                    border-bottom: 2px solid var(--scholarix-primary);
                    font-weight: 600;
                    background: var(--scholarix-light-gray);
                }

                .totals_table td {
                    padding: 8px 12px;
                    text-align: right;
                }

                .totals_table td:first-child {
                    text-align: left;
                    font-weight: 500;
                }

                /* Footer */
                .o_report_footer {
                    margin-top: 40px;
                    padding-top: 20px;
                    border-top: 2px solid var(--scholarix-primary);
                    text-align: center;
                    color: var(--scholarix-gray);
                    font-size: 10px;
                }

                .footer_note {
                    background: var(--scholarix-light-gray);
                    padding: 15px;
                    border-radius: 6px;
                    margin-top: 20px;
                    font-style: italic;
                }

                /* Print Optimizations */
                @media print {
                    .o_report_layout_container {
                        font-size: 11px;
                    }
                    
                    .o_company_header {
                        break-inside: avoid;
                    }
                    
                    .o_main_table {
                        break-inside: auto;
                    }
                    
                    .o_main_table tr {
                        break-inside: avoid;
                    }
                    
                    .totals_section {
                        break-inside: avoid;
                    }
                }

                /* Circuit Style Enhancements */
                .circuit_accent {
                    position: relative;
                }

                .circuit_accent::before {
                    content: '';
                    position: absolute;
                    width: 2px;
                    height: 2px;
                    background: var(--scholarix-accent);
                    border-radius: 50%;
                    left: -8px;
                    top: 50%;
                    transform: translateY(-50%);
                    box-shadow: 0 0 4px var(--scholarix-accent);
                }
            </style>
        </template>
    </data>
</odoo>