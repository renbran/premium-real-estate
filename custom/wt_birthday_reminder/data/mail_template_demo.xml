                                                <div style="font-size: 14px; line-height: 1.6; opacity: 0.8;">
                                                    Sheikh Zayed Road, Single Business Tower<br/>
                                                    Office 2902, 29th Floor, Dubai, UAE
                                                </div>
                                            </div>
                                            
                                            <div style="margin-top: 15px; font-size: 12px; color: #D4AF37;">
                                                <t t-out="object.company_id.phone or '+971 4 XXX XXXX'"></t>
                                                <t t-if="object.company_id.email">
                                                    | <a t-attf-href="'mailto:%s' % {{ object.company_id.email }}" style="color: #D4AF37; text-decoration: none;" t-out="object.company_id.email or 'info@osusproperties.com'"></a>
                                                </t>
                                                <t t-if="object.company_id.website">
                                                    | <a t-attf-href="'%s' % {{ object.company_id.website }}" style="color: #D4AF37; text-decoration: none;" t-out="object.company_id.website or 'www.osusproperties.com'"></a>
                                                </t>
                                            </div>
                                            
                                            <div style="margin-top: 20px; padding-top: 15px; border-top: 1px solid #444444; font-size: 11px; opacity: 0.6;">
                                                <strong>Warmest Regards,</strong><br/>
                                                The OSUS Properties Team
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </field>
        <field name="auto_delete" eval="True"/>
        <field name="lang">{{object.lang}}</field>
    </record>



