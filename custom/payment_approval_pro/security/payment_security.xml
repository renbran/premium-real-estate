<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Payment User Groups -->
        <record id="group_payment_user" model="res.groups">
            <field name="name">Payment / User</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="comment">Basic payment access - can create and view own payments</field>
        </record>

        <record id="group_payment_verifier" model="res.groups">
            <field name="name">Payment / Verifier</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="comment">Can verify payments via QR code and manual verification</field>
        </record>

        <record id="group_payment_reviewer" model="res.groups">
            <field name="name">Payment / Reviewer</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_verifier'))]"/>
            <field name="comment">Can review payments in first approval stage</field>
        </record>

        <record id="group_payment_approver" model="res.groups">
            <field name="name">Payment / Approver</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_reviewer'))]"/>
            <field name="comment">Can approve payments in second approval stage</field>
        </record>

        <record id="group_payment_authorizer" model="res.groups">
            <field name="name">Payment / Authorizer</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_approver'))]"/>
            <field name="comment">Can authorize vendor payments in third approval stage</field>
        </record>

        <record id="group_payment_poster" model="res.groups">
            <field name="name">Payment / Poster</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_authorizer'))]"/>
            <field name="comment">Can post approved payments to ledger</field>
        </record>

        <record id="group_payment_manager" model="res.groups">
            <field name="name">Payment / Manager</field>
            <field name="category_id" ref="base.module_category_accounting_finance"/>
            <field name="implied_ids" eval="[(4, ref('payment_approval_pro.group_payment_poster')), (4, ref('account.group_account_manager'))]"/>
            <field name="comment">Full payment management access including configuration and overrides</field>
        </record>

        <!-- Record Rules for Security -->
        <record id="payment_user_rule" model="ir.rule">
            <field name="name">Payment User Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('user_has_groups', 'payment_approval_pro.group_payment_manager')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_reviewer_rule" model="ir.rule">
            <field name="name">Payment Reviewer Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', '|', ('create_uid', '=', user.id), ('state', 'in', ['draft', 'submitted']), ('user_has_groups', 'payment_approval_pro.group_payment_manager')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_approver_rule" model="ir.rule">
            <field name="name">Payment Approver Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', '|', ('create_uid', '=', user.id), ('state', 'in', ['draft', 'submitted', 'under_review']), ('user_has_groups', 'payment_approval_pro.group_payment_manager')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_manager_rule" model="ir.rule">
            <field name="name">Payment Manager Full Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Prevent editing of posted payments -->
        <record id="payment_posted_readonly_rule" model="ir.rule">
            <field name="name">Posted Payments Read Only</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', '=', 'posted')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Company-based access rules -->
        <record id="payment_company_rule" model="ir.rule">
            <field name="name">Payment Company Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Approval History Security Rules -->
        <record id="approval_history_user_rule" model="ir.rule">
            <field name="name">Approval History User Rule</field>
            <field name="model_id" ref="payment_approval_pro.model_payment_approval_history"/>
            <field name="domain_force">['|', ('payment_id.create_uid', '=', user.id), ('user_has_groups', 'payment_approval_pro.group_payment_manager')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- QR Verification Security Rules -->
        <record id="qr_verification_user_rule" model="ir.rule">
            <field name="name">QR Verification User Rule</field>
            <field name="model_id" ref="payment_approval_pro.model_payment_qr_verification"/>
            <field name="domain_force">['|', ('payment_id.create_uid', '=', user.id), ('user_has_groups', 'payment_approval_pro.group_payment_verifier')]</field>
            <field name="groups" eval="[(4, ref('payment_approval_pro.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>