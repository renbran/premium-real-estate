<odoo>
    <data noupdate="1">

        <!-- =================================================================== -->
        <!-- SECURITY GROUPS HIERARCHY                                          -->
        <!-- =================================================================== -->

        <!-- Base Payment Voucher User Group -->
        <record id="group_payment_voucher_user" model="res.groups">
            <field name="name">OSUS Payment Voucher User</field>
            <field name="comment">Can create and submit payment vouchers for approval</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <!-- Payment Voucher Reviewer Group -->
        <record id="group_payment_voucher_reviewer" model="res.groups">
            <field name="name">OSUS Payment Voucher Reviewer</field>
            <field name="comment">Can review submitted payment vouchers</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_user'))]"/>
        </record>

        <!-- Payment Voucher Approver Group -->
        <record id="group_payment_voucher_approver" model="res.groups">
            <field name="name">OSUS Payment Voucher Approver</field>
            <field name="comment">Can approve payment vouchers after review</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_reviewer'))]"/>
        </record>

        <!-- Payment Voucher Authorizer Group -->
        <record id="group_payment_voucher_authorizer" model="res.groups">
            <field name="name">OSUS Payment Voucher Authorizer</field>
            <field name="comment">Can authorize approved payment vouchers</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_approver'))]"/>
        </record>

        <!-- Payment Voucher Manager Group -->
        <record id="group_payment_voucher_manager" model="res.groups">
            <field name="name">OSUS Payment Voucher Manager</field>
            <field name="comment">Full access to payment voucher system including reset and configuration</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_authorizer')), (4, ref('account.group_account_manager'))]"/>
        </record>

        <!-- QR Verification Groups -->
        <record id="group_payment_qr_verifier" model="res.groups">
            <field name="name">OSUS Payment QR Verifier</field>
            <field name="comment">Can verify payments via QR codes</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_user'))]"/>
        </record>

        <!-- =================================================================== -->
        <!-- RECORD RULES                                                       -->
        <!-- =================================================================== -->

        <!-- Payment Voucher User Rule -->
        <record id="payment_voucher_user_rule" model="ir.rule">
            <field name="name">Payment Voucher User Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[
                '|',
                ('create_uid', '=', user.id),
                ('voucher_state', 'in', ['submitted', 'under_review', 'approved', 'authorized', 'posted'])
            ]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Voucher Reviewer Rule -->
        <record id="payment_voucher_reviewer_rule" model="ir.rule">
            <field name="name">Payment Voucher Reviewer Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[
                '|',
                ('create_uid', '=', user.id),
                ('voucher_state', 'in', ['submitted', 'under_review', 'approved', 'authorized', 'posted'])
            ]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Voucher Approver Rule -->
        <record id="payment_voucher_approver_rule" model="ir.rule">
            <field name="name">Payment Voucher Approver Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Voucher Manager Rule -->
        <record id="payment_voucher_manager_rule" model="ir.rule">
            <field name="name">Payment Voucher Manager Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Company-based Rules -->
        <record id="payment_voucher_company_rule" model="ir.rule">
            <field name="name">Payment Voucher Multi-Company Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>