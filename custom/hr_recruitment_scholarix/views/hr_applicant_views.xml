<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit HR Applicant Form View -->
        <record id="hr_applicant_view_form_inherit_scholarix" model="ir.ui.view">
            <field name="name">hr.applicant.form.inherit.scholarix</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <!-- Add buttons to the header -->
                <xpath expr="//header" position="inside">
                    <button name="action_send_contract_email" 
                            string="ðŸ“§ Send Contract Email" 
                            type="object" 
                            class="btn-primary"
                            invisible="not email_from"
                            icon="fa-envelope"/>
                    <button name="action_preview_contract_email" 
                            string="ðŸ‘ Preview Email" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-eye"/>
                </xpath>

                <!-- Add contract proposal information in a new page -->
                <xpath expr="//notebook" position="inside">
                    <page string="Contract Communication" name="contract_communication">
                        <group>
                            <group string="Email Configuration">
                                <field name="email_from" string="Candidate Email" required="1"/>
                                <field name="partner_id" string="Contact"/>
                                <field name="stage_id" readonly="1"/>
                            </group>
                            <group string="Job Details">
                                <field name="job_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="user_id" string="Recruiter" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Contract Email Actions">
                            <div class="row">
                                <div class="col-md-6">
                                    <button name="action_send_contract_email" 
                                            string="Send Training Period Offer Email" 
                                            type="object" 
                                            class="btn btn-primary btn-block"
                                            invisible="not email_from"
                                            icon="fa-paper-plane"/>
                                </div>
                                <div class="col-md-6">
                                    <button name="action_preview_contract_email" 
                                            string="Preview Email Template" 
                                            type="object" 
                                            class="btn btn-secondary btn-block"
                                            icon="fa-search"/>
                                </div>
                            </div>
                        </group>

                        <separator string="Email Template Information"/>
                        <div class="alert alert-info" role="alert">
                            <h5>ðŸ“‹ Training Period Offer Template</h5>
                            <p>This email template includes:</p>
                            <ul>
                                <li>Professional SCHOLARIX branding and responsive design</li>
                                <li>Training period details (12 days, AED 60/day)</li>
                                <li>Terms and conditions</li>
                                <li>Required documents list</li>
                                <li>Contact information and acceptance form</li>
                                <li>Mobile-responsive layout with SCHOLARIX colors</li>
                            </ul>
                            <p><strong>Note:</strong> Email will be automatically sent when the applicant stage changes to "Contract Proposal".</p>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Add stage configuration view -->
        <record id="hr_recruitment_stage_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.recruitment.stage.form.inherit</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='description']" position="after">
                    <group string="SCHOLARIX Email Configuration">
                        <field name="is_contract_proposal" 
                               string="Contract Proposal Stage"
                               help="Automatically send training period offer email when applicant reaches this stage"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- List view for stages -->
        <record id="hr_recruitment_stage_view_tree_inherit" model="ir.ui.view">
            <field name="name">hr.recruitment.stage.tree.inherit</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hired_stage']" position="after">
                    <field name="is_contract_proposal" string="Contract Stage"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>