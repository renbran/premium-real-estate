<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Create Payment Module Category -->
        <record id="module_category_payment" model="ir.module.category">
            <field name="name">Payment Management</field>
            <field name="description">Payment processing and approval workflow</field>
            <field name="sequence">10</field>
        </record>

        <!-- Payment User Groups - Base group first, then hierarchy -->
        <record id="group_payment_user" model="res.groups">
            <field name="name">Payment User</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Basic payment access - can create and view own payments</field>
        </record>

        <record id="group_payment_verifier" model="res.groups">
            <field name="name">Payment Verifier</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_user'))]"/>
            <field name="comment">Can verify payments via QR code and manual verification</field>
        </record>

        <record id="group_payment_reviewer" model="res.groups">
            <field name="name">Payment Reviewer</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_verifier'))]"/>
            <field name="comment">Can review payments in first approval stage</field>
        </record>

        <record id="group_payment_approver" model="res.groups">
            <field name="name">Payment Approver</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_reviewer'))]"/>
            <field name="comment">Can approve payments in second approval stage</field>
        </record>

        <record id="group_payment_authorizer" model="res.groups">
            <field name="name">Payment Authorizer</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_approver'))]"/>
            <field name="comment">Can authorize vendor payments in third approval stage</field>
        </record>

        <record id="group_payment_poster" model="res.groups">
            <field name="name">Payment Poster</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_authorizer'))]"/>
            <field name="comment">Can post approved payments to ledger</field>
        </record>

        <record id="group_payment_manager" model="res.groups">
            <field name="name">Payment Manager</field>
            <field name="category_id" ref="module_category_payment"/>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_poster')), (4, ref('account.group_account_manager'))]"/>
            <field name="comment">Full payment management access including configuration and overrides</field>
        </record>

        <!-- Record Rules for Security -->

        <!-- Payment User - Can view and edit own payments, plus all customer receipts (inbound) -->
        <record id="payment_user_rule" model="ir.rule">
            <field name="name">Payment User Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', '|', ('create_uid', '=', user.id), ('approval_state', 'in', ['draft']), ('payment_type', '=', 'inbound')]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Reviewer - Can view vendor payments in review stages, all customer receipts -->
        <record id="payment_reviewer_rule" model="ir.rule">
            <field name="name">Payment Reviewer Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('payment_type', '=', 'inbound'), '&amp;', ('payment_type', '=', 'outbound'), ('approval_state', 'in', ['under_review', 'for_approval', 'for_authorization', 'approved', 'posted'])]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Approver - Can view payments in approval stages -->
        <record id="payment_approver_rule" model="ir.rule">
            <field name="name">Payment Approver Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('approval_state', 'in', ['for_approval', 'for_authorization', 'approved', 'posted'])]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Authorizer - Can view payments in authorization stages -->
        <record id="payment_authorizer_rule" model="ir.rule">
            <field name="name">Payment Authorizer Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('approval_state', 'in', ['for_authorization', 'approved', 'posted'])]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_authorizer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Poster - Can view and post approved payments -->
        <record id="payment_poster_rule" model="ir.rule">
            <field name="name">Payment Poster Access Rule</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('approval_state', 'in', ['approved', 'posted'])]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_poster'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Manager - Full access with workflow oversight -->
        <record id="payment_manager_rule" model="ir.rule">
            <field name="name">Payment Manager Full Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Additional Security Rules for Workflow Actions -->

        <!-- Workflow Action Security - Review Stage -->
        <record id="workflow_review_security" model="ir.rule">
            <field name="name">Review Stage Security</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[
                ('approval_state', '=', 'under_review'),
                '|',
                ('reviewer_id', '=', False),
                ('reviewer_id', '!=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Workflow Action Security - Approval Stage -->
        <record id="workflow_approval_security" model="ir.rule">
            <field name="name">Approval Stage Security</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[
                ('approval_state', '=', 'for_approval'),
                '|',
                ('approver_id', '=', False),
                ('approver_id', '!=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Workflow Action Security - Authorization Stage -->
        <record id="workflow_authorization_security" model="ir.rule">
            <field name="name">Authorization Stage Security</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[
                ('approval_state', '=', 'for_authorization'),
                '|',
                ('authorizer_id', '=', False),
                ('authorizer_id', '!=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_authorizer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>


</odoo>