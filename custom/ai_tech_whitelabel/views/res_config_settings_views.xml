<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- AI Tech Theme Configuration Settings -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ai.tech.theme</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="95"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">

                    <!-- AI Tech Theme Section -->
                    <div class="app_settings_block" data-string="AI Tech Theme" string="AI Tech Theme" data-key="ai_tech_whitelabel">
                        <h2>AI Tech White-Label Theme</h2>
                        <div class="row mt16 o_settings_container">

                            <!-- Branding Settings -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="ai_theme_app_name" string="Application Name"/>
                                            <field name="ai_theme_app_name" class="oe_inline" placeholder="e.g., OSUS ERP"/>
                                            <div class="text-muted">
                                                Custom application name displayed throughout the system
                                            </div>
                                        </div>
                                        <div class="mt16">
                                            <label for="ai_theme_tagline" string="Tagline"/>
                                            <field name="ai_theme_tagline" class="oe_inline" placeholder="e.g., Powered by AI Technology"/>
                                            <div class="text-muted">
                                                Tagline displayed on login page and portal
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Typography Settings -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="ai_theme_font_family" string="Font Family"/>
                                            <field name="ai_theme_font_family" class="oe_inline"/>
                                            <div class="text-muted">
                                                Choose the primary font family for your application
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Color Settings - Primary -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label string="Primary Color Scheme"/>
                                        <div class="text-muted mb8">
                                            Main brand colors used throughout the interface
                                        </div>
                                        <div class="mt16 row">
                                            <div class="col-6">
                                                <label for="ai_theme_primary_color" string="Primary Color"/>
                                                <field name="ai_theme_primary_color" widget="color" class="oe_inline"/>
                                            </div>
                                            <div class="col-6">
                                                <label for="ai_theme_secondary_color" string="Secondary Color"/>
                                                <field name="ai_theme_secondary_color" widget="color" class="oe_inline"/>
                                            </div>
                                        </div>
                                        <div class="mt8 row">
                                            <div class="col-6">
                                                <label for="ai_theme_accent_color" string="Accent Color"/>
                                                <field name="ai_theme_accent_color" widget="color" class="oe_inline"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Background Colors -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label string="Background Colors"/>
                                        <div class="text-muted mb8">
                                            Dark mode background colors
                                        </div>
                                        <div class="mt16 row">
                                            <div class="col-6">
                                                <label for="ai_theme_dark_bg" string="Main Background"/>
                                                <field name="ai_theme_dark_bg" widget="color" class="oe_inline"/>
                                            </div>
                                            <div class="col-6">
                                                <label for="ai_theme_sidebar_bg" string="Sidebar Background"/>
                                                <field name="ai_theme_sidebar_bg" widget="color" class="oe_inline"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Visual Effects -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_theme_enable_glassmorphism"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_theme_enable_glassmorphism"/>
                                    <div class="text-muted">
                                        Enable modern glass-like transparency effects on panels and cards
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_theme_enable_animations"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_theme_enable_animations"/>
                                    <div class="text-muted">
                                        Enable smooth transitions and animated effects
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_theme_enable_gradients"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_theme_enable_gradients"/>
                                    <div class="text-muted">
                                        Enable vibrant gradient backgrounds and color transitions
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_theme_enable_particles"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_theme_enable_particles"/>
                                    <div class="text-muted">
                                        Enable animated particle effects on login page (may impact performance)
                                    </div>
                                </div>
                            </div>

                            <!-- Media Assets -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label for="ai_theme_login_bg_image" string="Login Background Image"/>
                                        <field name="ai_theme_login_bg_image" widget="image" class="oe_avatar"/>
                                        <div class="text-muted">
                                            Custom background image for login page (recommended: 1920x1080px)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label for="ai_theme_favicon" string="Favicon"/>
                                        <field name="ai_theme_favicon" widget="image" class="oe_avatar"/>
                                        <div class="text-muted">
                                            Custom favicon for browser tab (recommended: 32x32px ICO file)
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
