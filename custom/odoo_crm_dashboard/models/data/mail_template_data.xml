<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================================================================== -->
    <!-- PAYMENT APPROVAL WORKFLOW EMAIL TEMPLATES WITH COLOR CODING -->
    <!-- Blue - Under Review | Green - Approved | Orange - Authorization -->
    <!-- Purple - Posted | Red - Rejected | Deep Orange - Urgent -->
    <!-- ===================================================================== -->

    <!-- 1. Under Review - Payment Submitted for Review -->
    <record id="mail_template_payment_submitted" model="mail.template">
        <field name="name">Payment Submitted for Review</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment ${object.voucher_number or object.name} Submitted for Review</field>
        <field name="email_from">${object.company_id.email or user.email}</field>
        <field name="email_to">${object.company_id.email or user.email}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; background-color: #f5f5f5;">
                <table style="width: 100%; max-width: 600px; margin: 20px auto; background-color: #ffffff; border: 1px solid #e0e0e0; border-radius: 4px;">
                    <tbody>
                        <tr>
                            <td style="padding: 20px; background-color: #2196F3; color: #ffffff; text-align: center; border-radius: 4px 4px 0 0;">
                                <h2 style="margin: 0; font-size: 24px; font-weight: 300;">üîµ Payment Review Required</h2>
                                <p style="margin: 8px 0 0 0; font-size: 14px; opacity: 0.9;">Awaiting Your Review</p>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 30px 20px; font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 13px; color: #555555;">
                                <p style="margin: 0 0 10px 0;">Dear Reviewer,</p>
                                <p style="margin: 10px 0;">A new payment has been submitted and requires your review.</p>
                                <div style="background-color: #E3F2FD; border-left: 4px solid #2196F3; padding: 15px; margin: 20px 0;">
                                    <h3 style="margin: 0 0 12px 0; color: #1976D2; font-size: 16px; font-weight: 600;">Payment Under Review</h3>
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <tr>
                                            <td style="padding: 4px 0; color: #666666; font-weight: 600; width: 40%;">Voucher Number:</td>
                                            <td style="padding: 4px 0; color: #333333; font-weight: 600;">
                                                <t t-out="object.voucher_number or object.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px 0; color: #666666; font-weight: 600;">Partner:</td>
                                            <td style="padding: 4px 0; color: #333333;">
                                                <t t-out="object.partner_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px 0; color: #666666; font-weight: 600;">Amount:</td>
                                            <td style="padding: 4px 0; color: #2196F3; font-weight: 700; font-size: 16px;">
                                                <t t-out="object.currency_id.symbol"/>
                                                <t t-out="'{:,.2f}'.format(object.amount)"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px 0; color: #666666; font-weight: 600;">Payment Type:</td>
                                            <td style="padding: 4px 0; color: #333333;">
                                                <t t-if="object.payment_type == 'inbound'">Receipt</t>
                                                <t t-else="">Payment</t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px 0; color: #666666; font-weight: 600;">Submitted By:</td>
                                            <td style="padding: 4px 0; color: #333333;">
                                                <t t-out="object.create_uid.name"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div style="text-align: center; margin: 30px 0;">
                                    <a t-attf-href="/web#id={{object.id}}&amp;model=account.payment&amp;view_type=form" style="background-color: #2196F3; color: #ffffff; padding: 12px 30px; text-decoration: none; border-radius: 4px; display: inline-block; font-size: 14px; font-weight: 600;">Review Payment Now</a>
                                </div>
                                <p style="margin: 10px 0 0 0;">Best regards,<br/>
                                <strong>Payment System</strong>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 15px 20px; background-color: #f9f9f9; border-top: 1px solid #e0e0e0; text-align: center; font-size: 11px; color: #999999;">This is an automated notification from the payment system.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </field>
    <field name="auto_delete" eval="True"/>
</record>

