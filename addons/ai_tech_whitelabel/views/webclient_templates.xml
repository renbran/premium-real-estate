<!-- AI Tech Theme - Web Client Templates -->
<!-- Main application interface templates -->
<odoo>
    <!-- Inject AI Theme Assets -->
    <template id="ai_theme_assets" name="AI Tech Theme Assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <!-- Theme styles are loaded via manifest assets -->
        </xpath>
    </template>
    
    <!-- Custom Web Client Body Classes -->
    <template id="webclient_bootstrap_custom" name="AI Tech Web Client Bootstrap" inherit_id="web.webclient_bootstrap">
        <xpath expr="//body" position="attributes">
            <attribute name="class" add="ai-theme-enabled ai-animations-enabled ai-glassmorphism-enabled" separator=" "/>
            <attribute name="data-theme">dark</attribute>
        </xpath>
    </template>
    
    <!-- Enhanced Navbar Branding -->
    <template id="navbar_brand_custom" name="AI Tech Navbar Brand">
        <t t-name="ai_tech_whitelabel.NavbarBrand">
            <div class="o_menu_brand ai-brand-container">
                <i class="fa fa-bolt ai-brand-icon"></i>
                <span class="ai-brand-text" t-esc="company.ai_theme_app_name or 'OSUS ERP'"></span>
            </div>
        </t>
    </template>
    
    <!-- Custom Loading Screen -->
    <template id="loading_screen_custom" name="AI Tech Loading Screen">
        <t t-name="ai_tech_whitelabel.LoadingScreen">
            <div class="o_loading_screen ai-loading-screen">
                <div class="ai-loading-content">
                    <div class="ai-loading-logo">
                        <i class="fa fa-bolt ai-animate-glow" style="font-size: 64px;"></i>
                    </div>
                    <div class="ai-loading-spinner"></div>
                    <p class="ai-loading-text">Loading AI-Powered ERP...</p>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Enhanced Error Dialog -->
    <template id="error_dialog_custom" name="AI Tech Error Dialog">
        <t t-name="ai_tech_whitelabel.ErrorDialog">
            <div class="modal ai-error-modal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content o_glass_modal">
                        <div class="modal-header">
                            <i class="fa fa-exclamation-triangle"></i>
                            <h5 class="modal-title">System Error</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p t-esc="error.message"></p>
                            <div class="ai-error-details" t-if="error.data">
                                <details>
                                    <summary>Technical Details</summary>
                                    <pre t-esc="error.data"></pre>
                                </details>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" t-on-click="onRetry">Retry</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Custom Notification -->
    <template id="notification_custom" name="AI Tech Notification">
        <t t-name="ai_tech_whitelabel.Notification">
            <div class="o_notification ai-notification" t-att-class="'o_notification_' + type">
                <div class="o_notification_content">
                    <div class="o_notification_icon">
                        <i t-att-class="getIcon(type)"></i>
                    </div>
                    <div class="o_notification_message">
                        <strong t-if="title" t-esc="title"></strong>
                        <p t-esc="message"></p>
                    </div>
                    <button class="o_notification_close" t-on-click="onClose">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
                <div class="o_notification_progress" t-if="progress">
                    <div class="progress-bar" t-att-style="'width: ' + progress + '%'"></div>
                </div>
            </div>
        </t>
    </template>
</odoo>
